kmer_file = open("SRR1763667.res2", "r")

kmer_hash = {}
no_left_neighbor = 0
branching = 0

for line in kmer_file:
	kmer_hash[line[:27]] = 1

kmer_file.close()

for kmer in kmer_hash:

	left_neigh = 0
	right_neigh = 0

	if 'A' + kmer[:26] in kmer_hash:
		left_neigh += 1
	if 'C' + kmer[:26] in kmer_hash:
		left_neigh += 1
	if 'G' + kmer[:26] in kmer_hash:
		left_neigh += 1
	if 'T' + kmer[:26] in kmer_hash:
		left_neigh += 1

	if kmer[1:] + 'A' in kmer_hash:
		right_neigh += 1
	if kmer[1:] + 'C' in kmer_hash:
		right_neigh += 1
	if kmer[1:] + 'G' in kmer_hash:
		right_neigh += 1
	if kmer[1:] + 'T' in kmer_hash:
		right_neigh += 1

	if left_neigh == 0:
		no_left_neighbor += 1
	else if left_neigh > 1:
		branching += 1
	else if right_neigh > 1:
		branching += 1

	right_neig = 0
	left_neigh = 0

print("no_left_neighbor = " + str(no_left_neighbor))
print("branching = " + str(branching))
